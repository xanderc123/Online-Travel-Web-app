<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.AttractionCategoryMapper">
    <insert id="save">
        INSERT INTO attraction_category (name)
        VALUES (#{name})
    </insert>
    <update id="update">
        UPDATE attraction_category
        <set>
            <if test="name!= null and name!=''">
                name = #{name},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM attraction_category WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="query" resultMap="BaseResultMap">

        SELECT ac.*
        FROM attraction_category ac
        <where>

            <if test="id != null ">
                AND ac.id=#{id}
            </if>

            <if test="name != null and name != ''">
                AND ac.name LIKE concat('%',#{name},'%')
            </if>
        </where>
        ORDER BY ac.id DESC
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="queryCount" resultType="integer">

        SELECT COUNT(*)
        FROM attraction_category ac
        <where>

            <if test="id != null ">
                AND ac.id=#{id}
            </if>

            <if test="name != null and name != ''">
                AND ac.name LIKE concat('%',#{name},'%')
            </if>
        </where>

    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.entity.AttractionCategory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>


</mapper>
